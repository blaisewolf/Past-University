<Window x:Class="TournamentGame.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TournamentGame"
        mc:Ignorable="d"
        Title="Menu" Height="350" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Menu" FontSize="33" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <ComboBox Name="playerNumberSelector" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <ComboBoxItem Content="1 Player" IsSelected="True"/>
            <ComboBoxItem Content="2 Players"/>
            <ComboBoxItem Content="3 Players"/>
            <ComboBoxItem Content="4 Players"/>
        </ComboBox>
        <Button Content="Start" Height="50" Width="150" Grid.Row="2" Click="Button_Click"/>
    </Grid>
</Window>
